<Window x:Class="QrIfcPlugin.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR IFC Viewer - Instellingen"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Plugin Configuratie" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Configureer de verbinding met de backend API en viewer instellingen."
                       TextWrapping="Wrap"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Settings Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- API Settings -->
                <GroupBox Header="API Instellingen" Padding="12" Margin="0,0,0,12">
                    <StackPanel>
                        <Label Content="API Base URL:"/>
                        <TextBox x:Name="ApiBaseUrlTextBox" 
                                 ToolTip="Bijvoorbeeld: https://api.example.com"/>

                        <Label Content="Viewer Base URL:"/>
                        <TextBox x:Name="ViewerBaseUrlTextBox"
                                 ToolTip="Bijvoorbeeld: https://viewer.example.com"/>

                        <Button Content="Test Verbinding" 
                                Click="TestConnection_Click"
                                HorizontalAlignment="Left"
                                Margin="0,4,0,0"/>
                        
                        <TextBlock x:Name="ConnectionStatusText"
                                   Margin="0,8,0,0"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </GroupBox>

                <!-- Project Settings -->
                <GroupBox Header="Project Instellingen" Padding="12" Margin="0,0,0,12">
                    <StackPanel>
                        <Label Content="Project Slug:"/>
                        <TextBox x:Name="ProjectSlugTextBox"
                                 ToolTip="Unieke project identifier (bijv. 'office-building-2024')"/>

                        <Label Content="Default Model Versie:"/>
                        <TextBox x:Name="DefaultModelVersionTextBox"
                                 ToolTip="Bijvoorbeeld: v1, v1.2, latest"/>

                        <Label Content="Token Verlooptijd (dagen):"/>
                        <TextBox x:Name="ExpiryDaysTextBox"
                                 ToolTip="Aantal dagen voordat de QR code link verloopt (standaard 90)"/>
                    </StackPanel>
                </GroupBox>

                <!-- QR Code Settings -->
                <GroupBox Header="QR Code Instellingen" Padding="12">
                    <StackPanel>
                        <Label Content="QR Grootte (mm):"/>
                        <TextBox x:Name="QrSizeTextBox"
                                 ToolTip="Grootte van de QR code op papier (minimaal 25mm aanbevolen)"/>

                        <CheckBox x:Name="ShowLabelCheckBox"
                                  Content="Toon label met element mark"/>

                        <Border Background="#FFF9E6" 
                                BorderBrush="#FFB800" 
                                BorderThickness="1"
                                Padding="8"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="⚠️ Belangrijk voor QR Scanning" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,4"/>
                                <TextBlock TextWrapping="Wrap">
                                    Voor betrouwbare scans moet de QR code minimaal 25-30mm groot zijn op papier.
                                    Test altijd met verschillende printers en PDF viewers.
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Annuleren" 
                    Click="Cancel_Click"
                    IsCancel="True"/>
            <Button Content="Opslaan" 
                    Click="Save_Click"
                    IsDefault="True"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
